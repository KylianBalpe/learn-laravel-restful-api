{
    "openapi": "3.0.3",
    "info": {
        "title": "User API",
        "description": "User API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/user/register" : {
            "post" : {
                "description": "Create / register a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "example": {
                                "balpe" : {
                                    "description" : "Create a new user",
                                    "value": {
                                        "username": "balpe",
                                        "password": "rahasia",
                                        "name": "Iqbal Pamula"
                                    }
                                }
                            },
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "minLength": 4
                                    },
                                    "password": {
                                        "type": "string",
                                        "minLength": 6
                                    },
                                    "name": {
                                        "type": "string",
                                        "maxLength": 100
                                    }
                                },
                                "required": [
                                    "username", "password", "name"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Validation errors",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "validationErrors": {
                                        "value": {
                                            "status": "ERROR",
                                            "code": 400,
                                            "message": "Validation errors",
                                            "errors": {
                                                "username": [
                                                    "Username is required",
                                                    "Username must be at least 4 characters"
                                                ],
                                                "password": [
                                                    "Password is required",
                                                    "Password must be at least 6 characters"
                                                ],
                                                "name": [
                                                    "Name is required"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "201": {
                        "description": "Register success",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "value": {
                                            "status": "OK",
                                            "code": 201,
                                            "message": "User registered successfully",
                                            "data": {
                                                "id": 1,
                                                "username": "balpe",
                                                "name": "Iqbal Pamula"
                                            }
                                        }
                                    }
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "code": {
                                            "type": "number"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/user/login" : {
            "post" : {
                "description": "Login user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "minLength": 4
                                    },
                                    "password": {
                                        "type": "string",
                                        "minLength": 6
                                    }
                                },
                                "required": [
                                    "username", "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Validation errors",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "validationErrors": {
                                        "value": {
                                            "status": "ERROR",
                                            "code": 400,
                                            "message": "Validation errors",
                                            "errors": {
                                                "username": [
                                                    "Username is required",
                                                    "Username must be at least 4 characters"
                                                ],
                                                "password": [
                                                    "Password is required",
                                                    "Password must be at least 6 characters"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Login success",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "value": {
                                            "status": "OK",
                                            "code": 200,
                                            "message": "Login success",
                                            "data": {
                                                "id": 1,
                                                "username": "balpe",
                                                "name": "Iqbal Pamula",
                                                "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyX2lkIjoxLCJ1c2VybmFtZSI6ImJhbHBlIiwiaWF0IjoxNjA5MjIwNjYyLCJleHAiOjE2MDkyMjQyNjJ9.1"
                                            }
                                        }
                                    }
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "code": {
                                            "type": "number"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "token": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/user/current" : {
            "get" : {
                "description": "Get current user",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get current user success",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "value": {
                                            "status": "OK",
                                            "code": 200,
                                            "message": "Get current user success",
                                            "data": {
                                                "id": 1,
                                                "username": "balpe",
                                                "name": "Iqbal Pamula"
                                            }
                                        }
                                    }
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "code": {
                                            "type": "number"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "patch" : {
                "description": "Update current user",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "maxLength": 100
                                    },
                                    "password": {
                                        "type": "string",
                                        "minLength": 6
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Update current user success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "code": {
                                            "type": "number"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/user/logout" : {
            "delete" : {
                "description": "Logout current user",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Logout success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "code": {
                                            "type": "number"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
